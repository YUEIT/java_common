<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>        
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#000000</item>        
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppFullTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <!-- 底部导航栏透明，但整个windowBackground会扩展到导航栏部分 -->
        <!--<item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>-->
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>

</resources>
